#!/usr/bin/env sh

docker buildx create --use --name build --node build --driver-opt network=host
docker buildx build  --cache-from "type=local,src=/tmp/.buildx-cache" --push --platform linux/amd64,linux/armhf,linux/aarch64 --tag "nlss/chrony-server:latest" .
docker buildx build  --cache-from "type=local,src=/tmp/.buildx-cache" --push --platform linux/amd64,linux/armhf,linux/aarch64 --tag "nlss/chrony-server:dev" --file Dockerfile.dev .